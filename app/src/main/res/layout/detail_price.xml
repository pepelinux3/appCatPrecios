<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/id_cardPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/bground_group"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/numberArt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="4dp"
                    android:text="no. Articulo"
                    android:textStyle="bold"
                    android:textColor="#C5BCBC"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/descripcionArt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="descripcion"
                    android:textColor="#C5BCBC"
                    android:layout_marginLeft="4dp"

                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/subgrupoArt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="subg"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/monedaView"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="end"
                        app:srcCompat="@drawable/moneda" />

                    <TextView
                        android:id="@+id/priceArt"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:text="price"
                        android:textColor="#4CAF50"
                        android:layout_marginRight="4dp"
                        android:textSize="15sp" />

                    <!--- Un comentario de una sola lÃ­nea -->

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>